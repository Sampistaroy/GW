<% layout('layout') -%>
<% script('js/bootstrap.js') -%>
<% stylesheet('css/bootstrap.css') -%>

      <!-- Jumbotron -->
      <div class="jumbotron">
		  <h1><%= title + ' ' %><code><%= user.username %></code></h1>
		  <p style="text-align:center;">Ho Créateur ! Inventez-nous comme toutes choses en cet univers.</p>
          <p>
            <a href="/maitre-de-jeu-aide" class="btn btn-primary btn-lg">aide &raquo;</a>
            <a href="/maitre-de-jeu" class="btn btn-primary btn-lg">retour &raquo;</a>
          </p>
      </div>

      <div class="row">
        <div class="col-md-12">
          <h3>Créez une Unité:</h3>
          <form method='post' action='/tasks'>

            <div>
            <label>Nom:</label>
            <input type="text" name="nom"/><br/>
            </div>

            <div>
            <label>Avatar:</label>
            <input type="text" name="avatar"/><br/>
            </div>

            <hr>

            <div>
            <label>Type(batiment, bonhomme):</label>
              <SELECT name="fonction">
                <OPTION VALUE="type">race</OPTION>
                <OPTION VALUE="type">batiment</OPTION>
                <OPTION VALUE="type">unité</OPTION>
                <OPTION VALUE="type">ressources</OPTION>
                <OPTION VALUE="type">composant</OPTION>
              </SELECT>
              ; <span class="glyphicon glyphicon-plus">Créer un nouveau type</span>
            </div>

            <div>
            <label>section accessible($sect_access):</label>
            <input type="text" name="sect_access"/><br/>
            </div>

            <div>
            <label>parent($parent):</label>
            <input type="text" name="parent"/><br/>
            </div>

            <hr>
            
            <div>
            <label>temps de fabrication($tps_crea):</label>
            <input type="text" name="tps_crea"/><br/>
            </div>

            <hr>
            
            <div>
            <label>Vie:</label>
            <input type="text" name="vie"/><br/>
            </div>
            
            <div>
            <label>Energie:</label>
            <input type="text" name="enrgie"/><br/>
            </div>

            <div>
            <label>Dégats physique($degats):</label>
            <input type="text" name="degats"/><br/>
            </div>

            <div>
            <label>Dégats magique($degats_m):</label>
            <input type="text" name="degats_m"/><br/>
            </div>
            
            <div>
            <label>Armure($armure):</label>
            <input type="text" name="armure"/><br/>
            </div>
            
            <div>
            <label>Résistance à la magie($arm_ma):</label>
            <input type="text" name="arm_ma"/><br/>
            </div>
            
            <div>
            <label>vit. déplacement($vit_depl):</label>
            <input type="text" name="vit_depl"/><br/>
            </div>
            
            <div>
            <label>Vitesse de travail($vit_trav):</label>
            <input type="text" name="vit_trav"/><br/>
            </div>

            <hr>
            
            <div>
            <label>cout en entretien($ct_entr):</label>
            <input type="text" name="ct_entr"/>
            </div>
            
            <div>
            <label>type de place occupée($plc_oqp):</label>
            <input type="text" name="plc_oqp"/><br/>
            </div>
            
            <div>
            <label>nombres de places occupées($nb_plc_oqp):</label>
            <input type="text" name="nb_plc_oqp"/><br/>
            </div>
            
           <br><input type="submit" value="Save">
          </form>
        </div>
      </div>

      <!-- Site footer -->
      <div class="footer">
        <p>&copy; Company 2013</p>
      </div>

    </div> <!-- /container -->
